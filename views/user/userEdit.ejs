<h1 class="h1 m-3 fs-3 fw-bold">ویرایش پروفایل</h1>
<div class="container-fluid">
  <form action="/dashboard/edit" method="post" class="row">
    <div class="col-5 m-2">
      <label for="editName" class="form-label">نام</label>
      <input
        type="text"
        name="name"
        class="form-control"
        id="editName"
        name="name"
        value="<%= user.name %>"
      />
    </div>
    <div class="col-5 m-2">
      <label for="editEmail" class="form-label">ایمیل</label>
      <input
        type="email"
        id="editEmail"
        class="form-control border <%= user.accEmail ? 'border-success' : 'border-danger' %>"
        disabled
        value="<%= user.email %>"
      />
      <% if(!user.accEmail) {%>
      <p class="text-muted status-email"></p>
      <button
        class="btn btn-success d-flex align-items-center justify-content-center"
        id="btnAccEmail"
        type="button"
      >
        تایید ایمیل
      </button>
      <% } %>
    </div>
    <br />
    <div class="col-2 m-2">
      <button class="btn btn-outline-success p-2">ویرایش</button>
    </div>
  </form>
</div>
<script src="/js/accEmail.js"></script>
